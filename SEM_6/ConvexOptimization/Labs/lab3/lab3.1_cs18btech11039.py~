  3.000000,
  2.000000,
  1.000000,
  0.000000,
])

rho = 0.002500

########### Formulation ######################

import cvxpy as cp

b = cp.Variable(n) #initial bank balance log
x = cp.Variable(m) #initial investement
w = cp.Variable(n) #withdrawals
payouts = P@x #payouts from investments

obj = cp.Minimize(b[0]+np.ones((1,m))@x)

constraints = [ b>=0, w>=0, x>=0, w + payouts >= e]

for i in range(1,n):
    constraints.append(b[i] == (1+rho)*b[i-1] - w[i-1])

problem = cp.Problem(obj,constraints)
problem.solve()

print(f'With the option to invest, minimum initial investment was found to be : {np.round(b[0].value + x.value.sum())} USD') 

b2 = cp.Variable(n) #initial bank balance log
w2 = cp.Variable(n) #withdrawals
constraints2 = [ b2>=0, w2 >= e]

for i in range(1,n):
    constraints2.append(b2[i] == (1+rho)*b2[i-1] - w2[i-1])

obj2 = cp.Minimize(b2[0])
problem2 = cp.Problem(obj2,constraints2)
problem2.solve()

print(f'Without the option to invest, minimum initial bank balance was found to be : {np.round(b2[0].value)} USD') 
